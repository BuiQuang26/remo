<div class="home">
    <div class="home-content-wrapper home-content-top">
        <div class="home-content home-poster">
            <div class="slider-slick">
                <div class="slider-items">
                    <img src="https://gemysix.com/wp-content/uploads/2020/02/59-review-phim-joker-2019-nhung-dieu-khien-ga-he-vun-vo-1-featured-image-1160x628.jpg"
                        alt="" class="slider-items_img">
                </div>
                <div class="slider-items">
                    <img src="https://i.pinimg.com/originals/c1/19/f3/c119f35a44c208b0e66a62d2505279d9.jpg" alt=""
                        class="slider-items_img">
                </div>
                <div class="slider-items">
                    <img src="https://1.bp.blogspot.com/-xN-mVqbvIKw/WXb1XzYXi3I/AAAAAAAABcM/DiRkxyYaIggF2lfpAWR_EFsO7ROlZs41gCLcBGAs/s1600/thumb-1920-731746.png"
                        alt="" class="slider-items_img">
                </div>
                <div class="slider-items">
                    <img src="https://i.pinimg.com/originals/03/0d/0e/030d0ec3627906ec28d22484a7487f71.jpg" alt=""
                        class="slider-items_img">
                </div>
                <div class="slider-items">
                    <img src="https://www.theyoungfolks.com/wp-content/uploads/2018/06/wall-e-eve.jpg" alt=""
                        class="slider-items_img">
                </div>

            </div>
            <div class="content-slogan-wrapper">
                <div class="content-slogan-container">
                    <h2 class="content-slogan-title">Recommend Movie</h2>
                    <p class="content-slogan__desr">Giới thiệu đến cho bạn nhưng bộ phim hay </p>
                </div>
            </div>
        </div>
    </div>
    <div class="home-content-wrapper">
        <div class="home-content">
            <h3 class="content-heading">BXH 10 IMDB</h3>
            <p class="content-description">Đây là top những bộ phim có điểm IMDB cao nhất</p>
            <div class="content-container">
                <div class="grid_row content-container-slick">
                    {{#each movie}}
                    {{#if (isMax @index 10)}}
                    <div class="grid_col-2-4">
                        <a href="/movie/{{this.slug}}" class="content-container_items-link">
                            <div class="items-wrapper" style="background-image: url({{this.imgY}});">
                                <div class="items-description">
                                    <span class="items-info">{{this.name}}</span>
                                    <span class="items-info">{{this.year}}</span>
                                    <p style="color: rgb(255, 217, 0);">IMDB : {{this.imdb}}</p>
                                </div>
                                <div class="items-rate">
                                    <span class="items-rate-info">#{{sum @index 1}}</span>
                                </div>
                            </div>
                        </a>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="home-content-wrapper">
        <div class="home-content">
            <h3 class="content-heading">kho phim</h3>
            <p class="content-description">Đây là kho những bộ phim hay mà mình đã từng xem, muốn chia sẻ với mọi người</p>
            <div class="row g-4">
                {{#each movie}}
                {{#if (isMax @index 12)}}
                <div class="col-6 col-sm-4 col-md-4 col-lg-3">
                    <a href="/movie/{{this.slug}}" class="content-container_items-link">
                        <div class="card home-store-item">
                            <img src="{{this.imgX}}" class="card-img-top home-content-img" alt="">
                            <div class="card-body items-body">
                                <h5 class="card-title items-title">{{this.name}}</h5>
                                <p class="card-text text-year">{{this.year}}</p>
                                <p class="rate-imdb">
                                    IMDB : {{this.imdb}} <i class="fas fa-star items-icon-star"></i>
                                </p>
                                <p class="nation">
                                    Quốc gia : {{this.Country}}
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                {{/if}}
                {{/each}}
            </div>
            <div class="home-content_btn-more">
                <a href="/list-all-movie" class="btn btn-link">Xem thêm</a>
            </div>
        </div>
    </div>
</div>

<script>
        $('.background').hide();
        $(document).ready(function(){
            $('.loadding-element').hide();
            $('.background').show();
            const screenWidth = $(window).width();
            let x = 3;
            if(screenWidth < 768){
                x = 1;
            }else if(screenWidth < 1024 ){
                x = 2
            }
            $('.content-container-slick').slick({
                // dots: true,
                infinite: false,
                speed: 500,
                slidesToShow: x,
                slidesToScroll: 1,
                nextArrow: '<button class="slick-next"><i class="fas fa-chevron-right"></i></button>',
                prevArrow: '<button class="slick-prev"><i class="fas fa-chevron-left"></button>'
                });
                $('.slider-slick').slick({
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    speed: 1000,
                    autoplay: true,
                    autoplaySpeed: 2500,
                });
                $('.slider-slick .slick-arrow').css("display", "none");

        });
</script>